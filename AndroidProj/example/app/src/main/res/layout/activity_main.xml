<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.codept.example.MainActivity"
    android:background="@drawable/image">

    >

    <EditText
        android:hint="Enter 1st Number"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/first" />





    <Button
        android:text="ADD"
        android:onClick="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/add"
        android:layout_below="@+id/second"
        android:layout_alignLeft="@+id/second"
        android:layout_alignStart="@+id/second" />

    <EditText
        android:hint="Enter 2nd Number"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_alignLeft="@+id/first"
        android:layout_alignStart="@+id/first"
        android:layout_marginTop="50dp" />

    <Button
        android:text="SUBTRACT"
        android:onClick="subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toRightOf="@+id/add"
        android:layout_toEndOf="@+id/add"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:id="@+id/subtract" />

    <Button
        android:text="MULTIPLY"
        android:onClick="multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/multiply" />

    <Button
        android:text="DIVIDE"
        android:onClick="divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/multiply"
        android:layout_alignRight="@+id/subtract"
        android:layout_alignEnd="@+id/subtract"
        android:id="@+id/divide" />

</RelativeLayout>
